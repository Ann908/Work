#include <iostream>
#include <string>

class BigNumber {
private:
    unsigned long long value;

public:
    BigNumber() : value(0) {}

    void setHex(const std::string& hex_string) {
        try {
            value = std::stoull(hex_string, 0, 16);
        } catch (std::invalid_argument& e) {
            std::cerr << "Invalid hexadecimal string" << std::endl;
        }
    }

    std::string getHex() const {
        return "0x" + std::to_string(value);
    }
};

int main() {
    BigNumber bigNumber;
    bigNumber.setHex("1a3b");  // Встановлюємо значення з шістнадцяткового рядка
    std::cout << "Hexadecimal Value: " << bigNumber.getHex() << std::endl;  // Виводимо значення у вигляді шістнадцяткового рядка

    return 0;
}
